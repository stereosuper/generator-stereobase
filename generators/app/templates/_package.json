{
    "name": "<%= config.name %>",
    "version": "0.0.0",
    "description": "<%= config.description %>",
    "main": "index.js",
    "scripts": {
        <% if (config.wordpress) { %>
            "dev": "webpack --config ./webpack.config.js --mode development",
            "build": "webpack --config ./webpack.config.js --mode production",
            "analyse": "webpack --config ./webpack.config.js --mode development --analyse",
            "lint": "eslint --ext .js --ignore-path .gitignore ./wp-content/themes/stereo",
            "lintfix": "eslint --fix --ext .js --ignore-path .gitignore ./wp-content/themes/stereo",
        <% } else { %>
            "dev": "webpack-dev-server --config ./webpack.config.js --mode development",
            "build": "webpack --config ./webpack.config.js --mode production",
            "lint": "eslint --ext .js --ignore-path .gitignore ./src",
            "lintfix": "eslint --fix --ext .js --ignore-path .gitignore ./src",
        <% } %>
        "": ""
    },
    "dependencies": {},
    "devDependencies": {},
    "author": "Stéréosuper",
    "license": "MIT",
    "browsers": ["last 2 versions"],
    "repository": {
        "type": "git",
        "url": "https://github.com/stereosuper/<%= config.name %>"
    },
    "": ""
}
