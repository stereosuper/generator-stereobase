{
   "name": "<%= config.name %>",
   "version": "0.0.0",
   "main": "index.js",
   "dependencies": {},
   "devDependencies": {},
   "scripts": {
        <% if (config.wordpress) { %>
            "start": "webpack --config ./dev.webpack.config.js --mode development",
            "build": "webpack --config ./prod.webpack.config.js --mode production"
        <% }else{ %>
            "start": "webpack-dev-server --config ./webpack.config.js --mode development",
            "build": "webpack --config ./webpack.config.js --mode production"
        <% } %>
   },
